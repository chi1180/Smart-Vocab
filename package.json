{
  "name": "smartvocab",
  "version": "1.0.0",
  "description": "Vocab management app with documents",
  "main": "dist/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"npm run start:renderer\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:renderer": "webpack serve --mode development --open-target http://localhost:3000",
    "start:electron": "tsc -p electron/tsconfig.json && electron dist/main.js",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "webpack --mode production",
    "build:electron": "tsc -p electron/tsconfig.json",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "clean": "rm -rf dist build node_modules",
    "dev": "cross-env NODE_ENV=development webpack serve --mode development",
    "electron:dev": "cross-env NODE_ENV=development electron dist/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^37.2.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/tailwindcss": "^3.0.11",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "electron-builder": "^26.0.12",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "homepage": "./",
  "build": {
    "appId": "com.example.myapp",
    "productName": "My Electron React App",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
